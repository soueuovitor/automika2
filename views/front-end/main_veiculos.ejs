<% include partials/header %>

<!-- Portfolio Section -->

<div class="content-wrap" id="listagem" >
        <div class="section-title text-center center" >
                <br>
                  <h2>Listagem</h2>
                 </div>
                 <div class="col-lg-12" style="margin-top: 10px; ">
    
                        <input class="form-control" id="marca" placeholder="Marca" type="text" style="width:30%" />
                        <select class="form-control button" id="sortPrice" style="width:30%">
                            <option>Ordenar Por:</option>
                            <option value="precoA">Preço Ascendente</option>
                            <option value="precoD">Preço Descendente</option>
                            <option value="cvA">Mais cavalos</option>
                            <option value="cvD">Menos cavalos</option>
        
                        </select>
        
        
        
                        <button type="button" class="btn btn-info" data-toggle="collapse"style="margin-bottom:10px;margin-top:10px" data-target="#collapseDiv">pesquisa avançada</button>
        
        
        
                        <div id="collapseDiv" class="collapse" style="height:max-content">
        
        
                                <div class="slider-container">
                                        <input class="slider" id="slider2" type="text"  />
                
                                </div>
        
                       
        
                            <br>
                            <br>
                            <br>
        
    
                            <input class="form-control" id="modelo" placeholder="Modelo" type="text" style="float: rigth;width: 30%"/>
        
                        </div>
         
    
        
        
                            <style>
                                .grid-item {
                                    width: 25%;
                                }
        
                                .grid-item--width2 {
                                    width: 50%;
                                }
        
        
                                .slider-container {
                                    width: 50%;
                                    float: left;
                                    margin-left: 10px;
        
                                   
                                }
        
                                .btn {
        
                                    border-radius: 20px;
        
                                }
        
                                .form-control {
                                    border-radius: 50px;
                                    margin-bottom: 10px;
                                    width: 50%;
                                    display: inline-block;
        
                                }
                                /*.card-price{
                                    background-color: black;
                                    width: 100%;
                                    height: -25px;
                                    text-align: center;
    
                                }
                                .card-price h4{
                                    margin-top: 100px;
                                   color:white
                                    
                                }*/
                                a {
                                      color: black   ;
                                        }
                                a:hover {
                                      color: black   ;
                                        }
                               
    
                            </style>
                            
        
    
        
        
        
    
        
    
    
    
    
    
        </div>
        <section id="main-cards">
                        
                            
                <% for (var c of data) { %>
                    <% if (c.ativo == 1) { %>
                        <div class="col-md-3" style="padding-right: 5px;"  data-target="/main/<%= c.matricula %>" >
                            <a href="/main/<%= c.matricula %>">
                            <div class="card">
                                    <div class="card-price">
                                    <h4 style="margin-top: 3px;font-size: 20px; text-align: center;">Preço de venda: <small><%= c.valor_venda %> €  </small></h4>
                                </div>
                                <img class="card-img-top" src="/public/img/<%= c.chassi %>-0.png" alt="Card image cap" style="margin-bottom:20px;">


                                <div class="card-block">
                                    <h4 class="card-title">
                                        <%= c.marca %> <small><%= c.modelo  %></small>
                                    </h4>
                                   
                                </div>
                                <div class="card-block">
                                        <h5><%= c.combustivel  %></h5>
                                        
                                    </div>
                                <ul class="list-group list-group-flush" style="display: inline;">
                                    <li class=" km" style="display: inline;margin-right: 10px;">
                                        <%= c.km %> Km </li>
                                    <li class=" cilindrada" style="display: inline;margin: 10px;">
                                        <%= c.cilindrada %> cc</li>
                                    <li class=" cavalagem" style="display: inline;margin: 10px;">
                                        <%= c.cv %> cavalos</li>
                                       
                                </ul>
                               

                            </div>
                        </a>

                        </div>
                       
                        <% } %>
                            <% } %>
            

        </section>
        </div>
        <div class="text-center">
     
        </div>
    </div>
      
                
         

        

  



