<% include partials/header%>
  <div class="content-wrap">
    <div class="main">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-8 p-r-0 title-margin-right">
            <div class="page-header">
              <div class="page-title">
                <h1>Listagem
                  <span>dos Clientes</span>
                </h1>
              </div>
            </div>
          </div>
        </div>
        <section id="main-content">
            <div class="right_col" role="main">
              <div class="">
                <div class="page-title">
                  <div class="title_left">
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                      <div class="x_title">
                        <h2> Vendas
                        </h2>
                        <div class="clearfix"></div>
                      </div>
                      <div class="x_content">
                        <form action="/vendas/create" method="post" class="form-horizontal form-label-left"
                          novalidate>
                          <span class="section"></span>
                          <br>
                          <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tituloS">Selecione o  cliente<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                              <select class="form-control" id="userSel" name="comprador" onchange="filter()" >
                                <option>Selecione um Cliente</option>
                                <% for (var c of clientes) { %>
                                  <option value="<%= c.nif %>" > <%= c.nome %></option>
                                <% } %>
                              </select>
                            </div>
                          </div>
                          <div class="item form-group" id="div">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nif"><span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                              <input type="text" id="nif" class="form-control col-md-4 col-xs-12">
                            </div>
                          </div>
                          <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="cc"><span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                              <input type="text" id="cc" class="form-control col-md-4 col-xs-12">
                            </div>
                          </div>
                          <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="morada"><span class="required"></span>
                            </label>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                              <input type="text" id="morada" class="form-control col-md-4 col-xs-12">
                            </div>
                          </div>
                            <br>
                            <div class="item form-group">
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tituloS">Selecione o  veiculo<span class="required">*</span>
                              </label>
                              <div class="col-md-4 col-sm-6 col-xs-12">
                                <select class="form-control" id="matricula" name="matricula">
                                  <option>Selecione um Veiculo</option>
                                  <% for (var v of veiculos) { %>
                                    <option value="<%= v.matricula %>" ><%= v.matricula %></option>
                                  <% } %>
                                </select>
                              </div>
                            </div>
                          <br>
                          <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tituloS">Pre√ßo de Venda<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                              <input class="form-control col-md-7 col-xs-12" id="preco" name="preco" type="text">
                            </div>
                        </div>
                          <div class="ln_solid"></div>
                          <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                              <button class="btn btn-primary" type="button" onclick="window.open('/clientes','_self')">Cancel</button>
                              <button id="send" type="submit" class="btn btn-success">Submit</button>
          
                              <% if (! isNew) { %>
                                <button type="button" class="btn btn-danger" onclick="removeRecord()">Apagar</button>
                                <% } %>
          
                                  <script type="text/javascript">
                                    function removeRecord() {
                                      if (confirm('Deseja mesmo remover este Cliente?')) {
                                        window.open("<%= '/clientes/' + clientes.idclientes + '/delete'%>", '_top')
                                      }
                                    }
                                  </script>
          
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <script>
              
         
          function filter(){
            var selected = $('#userSel').val();

            <% for (var c of clientes){ %>

              
               if (<%= c.nif %> == selected){ 
                 
                        document.getElementById("nif").value = "<%= c.nif %>";
                        document.getElementById("cc").value = "<%= c.cc %>";
                        document.getElementById("morada").value = "<%= c.morada %>";
             } 
            <%   } %>
          }





              
            </script>
          
          <!-- /# row -->
        </section>
      </div>
    </div>
  </div>






  
  <% include partials/footer%>