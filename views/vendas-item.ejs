<% include partials/header%>











  <div class="content-wrap">
    <div class="main">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-8 p-r-0 title-margin-right">
            <div class="page-header">
              <div class="page-title">
                <h1>Listagem
                  <span>dos Clientes</span>
                </h1>
              </div>
            </div>
          </div>
        </div>





        <section id="main-content">
       


            <div class="right_col" role="main">
              <div class="">
                <div class="page-title">
                  <div class="title_left">
                  </div>
          
          
                </div>
                <div class="clearfix"></div>
          
                <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                      <div class="x_title">
                        <h2> Vendas
                         
                        </h2>
                        <div class="clearfix"></div>
                      </div>
                      <div class="x_content">
          
                        <form action="/vendas/createvendas/nova" method="post" class="form-horizontal form-label-left"
                          novalidate>
          
                          <span class="section"></span>
                          <br>
                          <select class="form-control" id="nome" name="comprador">
                            <option>Selecione um Cliente</option>
                            <% for (var c of clientes) { %>
                              <option value="<%= c.nif %>" > <%= c.nome %></option>
                              
                            <% } %>
                            
                          </select>
                            <br>
                          <select class="form-control" id="matricula" name="matricula">
                            <option>Selecione um Veiculo</option>
                            <% for (var v of veiculos) { %>
                              <option value="<%= v.matricula %>" ><%= v.matricula %></option>
                            <% } %>
                          </select>
                          <br>
                          <div class="ln_solid"></div>
                          <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                              <button class="btn btn-primary" type="button" onclick="window.open('/clientes','_self')">Cancel</button>
                              <button id="send" type="submit" class="btn btn-success">Submit</button>
          
                              <% if (! isNew) { %>
                                <button type="button" class="btn btn-danger" onclick="removeRecord()">Apagar</button>
                                <% } %>
          
                                  <script type="text/javascript">
                                    function removeRecord() {
                                      if (confirm('Deseja mesmo remover este Cliente?')) {
                                        window.open("<%= '/clientes/' + clientes.idclientes + '/delete'%>", '_top')
                                      }
                                    }
                                  </script>
          
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>







            
          <!-- /# row -->
        </section>
      </div>
    </div>
  </div>






  
  <% include partials/footer%>